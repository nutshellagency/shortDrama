{
    "name": "shortdrama-monorepo",
    "private": true,
    "version": "1.0.0",
    "scripts": {
        "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
        "docker:down": "docker-compose -f docker-compose.dev.yml down",
        "dev:all": "concurrently \"npm run docker:dev\" \"npm run dev:server\" \"npm run dev:viewer\"",
        "dev:server": "cd server && npm run dev",
        "dev:viewer": "cd viewer && npm run dev",
        "db:push:local": "cd server && npx dotenv -e .env -- prisma db push",
        "db:push:prod": "cd server && npx dotenv -e .env.production -- prisma db push",
        "worker:local": "cd worker && python main.py",
        "worker:prod": "cd worker && cross-env API_BASE_URL=https://shortdrama-api.vercel.app python main.py",
        "native:minio": ".\\minio.exe server .\\minio_data --console-address \":9001\"",
        "native:dev": "concurrently \"npm run dev:server\" \"npm run dev:viewer\""
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "dotenv-cli": "^7.4.2"
    }
}