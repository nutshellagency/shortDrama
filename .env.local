# Local Development Environment Variables
# Copy this to .env.local and customize

# PostgreSQL Database (Docker)
POSTGRES_USER=shortdrama
POSTGRES_PASSWORD=shortdrama_dev_password
POSTGRES_DB=shortdrama
POSTGRES_PORT=5432

# MinIO (Local S3 Storage)
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin_secret
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET_RAW=shortdrama-raw
S3_BUCKET_PROCESSED=shortdrama-processed
PUBLIC_S3_BASE_URL=http://localhost:9000

# API Server
API_PORT=3000
JWT_SECRET=local_dev_jwt_secret_change_in_production
ADMIN_JWT_SECRET=local_dev_admin_jwt_secret_change_in_production

# Admin Credentials (Local Only!)
ADMIN_EMAIL=admin@local.dev
ADMIN_PASSWORD=admin123

# Worker
WORKER_TOKEN=local_worker_token_123

# Viewer (for Next.js)
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_SUPABASE_URL=http://localhost:9000
